        <Label x:Name="label_Copy6" Content="Висота" HorizontalAlignment="Left" Margin="63,267,0,0" VerticalAlignment="Top" Height="26" Width="47"/>
        <Label x:Name="label_Copy7" Content="Розміри" HorizontalAlignment="Left" Margin="25,164,0,0" VerticalAlignment="Top" RenderTransformOrigin="1,2.154" Height="26" Width="54"/>
        <CheckBox x:Name="cbHandled" Content="Малогабаритний" HorizontalAlignment="Left" Margin="63,195,0,0" VerticalAlignment="Top" Height="16" Width="111" RenderTransformOrigin="0.162,0.438"/>
        <TextBox x:Name="tbDeskription" HorizontalAlignment="Left" Height="112" Margin="25,298,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="357" Grid.ColumnSpan="2"/>

        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" HorizontalAlignment="Left" Height="13
                0" Margin="252,61,0,0" VerticalAlignment="Top" Width="130">
            <Image x:Name="image" Grid.Column="1" HorizontalAlignment="Left" Height="130" Margin="-1" VerticalAlignment="Top" Width="130
                   "/>
        </Border>
        <Button x:Name="btnSelectPhoto" Content="Вибрати зображення" HorizontalAlignment="Left" Margin="276,217,0,0" VerticalAlignment="Top" Width="106"/>


    </Grid>
</Window>
