        <TextBox x:Name="textBox_Copy3" HorizontalAlignment="Left" Height="23" Margin="126,244,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_Copy3" Content="Ширина" HorizontalAlignment="Left" Margin="63,241,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <TextBox x:Name="textBox_Copy4" HorizontalAlignment="Left" Height="23" Margin="126,218,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_Copy4" Content="Довжина" HorizontalAlignment="Left" Margin="63,215,0,0" VerticalAlignment="Top" Height="26" Width="61"/>
        <Label x:Name="label_Copy5" Content="Опис" HorizontalAlignment="Left" Margin="25,272,0,0" VerticalAlignment="Top" Height="26" Width="38"/>
